#set($attribs = $context.arguments)
{
    "version"  : "2018-05-29",
    "operation": "Query",
    "index"    : "${index_appdata_gsi_meta}",
    "query"    : {
        "expression" : "#itemType = :itemType AND begins_with(#meta, :meta)",
        "expressionNames" : {
            "#itemType" : "itemType",
            "#meta" : "meta"
        },
        "expressionValues": {
            ":itemType" : {"S" : "USER"},
            ":meta" : {"S" : "${context.source.id}"}
        }
    },
    "select" : "ALL_ATTRIBUTES",
    "limit": $util.defaultIfNull(${ctx.args.limit}, 20),
    "nextToken": $util.toJson($util.defaultIfNullOrBlank($ctx.args.nextToken, null))
}