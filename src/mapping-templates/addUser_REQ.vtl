#set($id = $util.autoId())
#set($attribs = $context.arguments.input)
#set($attribs.owner = $context.identity.sub)
#set($attribs.itemType = "USER")
#set($attribs.meta = "${context.arguments.input.accountId}#${context.arguments.input.group}")
#set($attribs.isDeleted = false)
#set($attribs.createdAt = $util.time.nowISO8601())
{
    "version": "2018-05-29",
    "operation": "PutItem",
    "key": {
        "id"  : $util.dynamodb.toDynamoDBJson($id),
        "type": {"S" : "USER"}
    },
    "attributeValues": $util.toJson($util.dynamodb.toMapValues($attribs)),
    "condition": {
        "expression": "attribute_not_exists(#id)",
        "expressionNames": {
            "#id": "id"
        }
    }
}